extends layout

block content

  h1 #{title}

  form(method='POST')
    div.form-group
      label(for='name') Category:
      input#name.form-control(type='text', placeholder='Evergreen, Annual, Bulbs etc.' name='name' required value=(undefined===category ? '' : category.name) )
      label(for='desc') Description:
      input#desc.form-control(type='text', placeholder='A short description of category' name='desc' required value=(undefined===category ? '' : category.desc) )
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
