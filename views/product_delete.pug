extends layout

block content

  h1 #{title}: !{product.name}

  p #[strong Desc: ] !{product.desc}
  p #[strong Price:] #{product.price}
  p #[strong Quantity Available:] #{product.noInStock}
  p #[strong Category: ] #{product.category.name}

  hr

  p Do you really want to delete this product?

  form(method='POST')
    div.form-group
    input#id.form-control(type='hidden',name='id', value=product._id )

    button.btn.btn-primary(type='submit') Delete
